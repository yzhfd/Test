<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Magend!{% endblock %}</title>
        
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" type="text/css" />        
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.6.2.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('jquery-ui-1.8.16.custom.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/underscore-min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/backbone.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/backbone.localStorage.js') }}" type="text/javascript"></script>
        {% endblock %}
        
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>