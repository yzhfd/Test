<div class="content-box"><!-- Start Content Box -->
    <div class="content-box-header">
        <h3>编排文章</h3><div style="padding-top: 6px;"><button id="layout_save" class="btn info" data-loading-text="保存中...">保存修改</button> <button id="layout_cancel" class="btn danger">放弃修改</button></div>
        <!-- href must be unique and match the id of target div -->
        <!--<ul class="content-box-tabs">
            <li><a href="#tab1" class="default-tab">Table</a></li>
            <li><a href="#tab2">Forms</a></li>
        </ul>-->
        <div class="clear"></div>
    </div> <!-- End .content-box-header -->
            
    <div class="content-box-content" style="overflow-x: auto; min-height: 200px;">
        <div id="articles_layout" class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
            <ol class="articles unselectable" style="wdith:{{ articles|length*160 }}">
                {% for article in articles %}
                    <li class="article">
                        <h5>一</h5>
                        <ol class="pages">
                            {% for page in article.pages %}
                                <li class="page"><img src="{{ ('uploads/' ~ page.landscapeImg)|apply_filter('landscapeThumb') }}" /></li>
                            {% endfor %}
                        </ol>
                    </li>
                {% endfor %}
            </ol>
        </div>
    </div>
</div><!-- End Content Box -->