{% extends '::base.html.twig' %}

{% block contentTitle %}设计机构{% endblock %}

{% block main %}
    <ul class="shortcut-buttons-set">
        <li><a rel="dialog" class="shortcut-button" href="{{ path('institute_new') }}"><span>新建</span></a></li>
        
        <!--<li><a class="shortcut-button" href="#"><span>
            <img src="resources/images/icons/paper_content_pencil_48.png" alt="icon" /><br />
            Create a New Page
        </span></a></li>-->
    </ul>
    <div class="clear"></div>

    <div class="content-box"><!-- Start Content Box -->
        <div class="content-box-header">
            <h3>机构列表</h3>
            <!-- href must be unique and match the id of target div -->
            <!--<ul class="content-box-tabs">
                <li><a href="#tab1" class="default-tab">Table</a></li>
                <li><a href="#tab2">Forms</a></li>
            </ul>-->
            <div class="clear"></div>
        </div> <!-- End .content-box-header -->
                
        <div class="content-box-content">
            <div class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
            <table>
                <thead><tr>
                    <th><input class="check-all" type="checkbox" /></th>
                    <th>机构名称</th>
                    <th>缩略图</th>
                    <th>简介</th>
                    <th>链接</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr></thead>
             
                <tfoot><tr>
                    <td colspan="6">
                        <div class="bulk-actions align-left">
                            <select name="dropdown" class="small">
                                <option value="option1">选择...</option>
                                <!--<option value="option2">编辑</option>-->
                                <option value="option3">删除</option>
                            </select>
                            <a class="button" href="#">执行</a>
                        </div>
                        
                        {% if pager.haveToPaginate() %}{{ pagerfanta(pager, 'magend') }}{% endif %}
                        <div class="clear"></div>
                    </td>
                </tr></tfoot>
             
                <tbody>
                    {% for institute in institutes %}
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td><a href="#" title="查看详细">{{ institute.name }}</a></td>
                        <td>{% if institute.thumbnail is not null %}<a href="#" title="放大"><img width="128" height="96" src="{{ asset('uploads/' ~ institute.thumbnail) }}" /></a>{% endif %}</td>
                        <td>{{ institute.intro|truncate(15) }}</td>
                        <td><a title="{{ institute.link }}" href="{{ institute.link }}">{{ institute.link|truncate(15) }}</a></td>
                        <td>{{ institute.createdAt|date('Y-m-d H:i') }}</td>
                        <td>
                            <!-- Icons -->
                             <a rel="dialog" href="{{ path('institute_edit', { 'id':institute.id }) }}" title="Edit"><img src="resources/images/icons/pencil.png" alt="编辑" /></a>
                             <a href="#" title="Delete"><img src="resources/images/icons/cross.png" alt="删除" /></a> 
                             <!--<a href="#" title="Edit Meta"><img src="resources/images/icons/hammer_screwdriver.png" alt="Edit Meta" /></a>-->
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
                    
{% endblock %}