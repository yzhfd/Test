{% extends app.request.isXmlHTTPRequest() ? '::ajaxBase.html.twig' : '::base.html.twig' %}

{% block main %}

<form style="width:680px; margin-top:10px;" id="institute_form" action="{% if instituteId is null %}{{ path('institute_new') }}{% else %}{{ path('institute_edit', { 'id':instituteId }) }}{% endif %}" method="post" {{ form_enctype(form) }}>
    <div class="clearfix">
        {{ form_label(form.name) }}
        <div class="input">{{ form_errors(form.name) }}{{ form_widget(form.name, { 'attr':{'class':'middle'} }) }}</div>
    </div>
    
    <div class="clearfix">
        {{ form_label(form.thumbnailImage) }}
        <div class="input">{{ form_errors(form.thumbnailImage) }}{{ form_widget(form.thumbnailImage) }}</div>
    </div>
    
    <div class="clearfix">
        {{ form_label(form.intro) }}
        <div class="input">{{ form_errors(form.intro) }}{{ form_widget(form.intro, { 'attr':{'class':'span8', 'rows':12} }) }}</div>
    </div>
    
    <div class="clearfix">
        {{ form_label(form.link) }}
        <div class="input">{{ form_errors(form.link) }}{{ form_widget(form.link, { 'attr':{'class':'middle'} }) }}</div>
    </div>
    
    {{ form_rest(form) }}
    
    <div class="actions"><button class="btn primary" type="submit">提交</button></div>
</form>

{% endblock %}