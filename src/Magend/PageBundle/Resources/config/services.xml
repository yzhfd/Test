<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="magend.page.doctrine.event_listener.class">Magend\PageBundle\EventListener\Doctrine\PageEventListener</parameter>
    </parameters>
    
    <services>
    
        <service id="magend.page.doctrine.event_listener" class="%magend.page.doctrine.event_listener.class%">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_listener" event="preUpdate" method="preUpdate" />
        </service>
    
    </services>
    
</container>
