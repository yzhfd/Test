{% extends app.request.isXmlHTTPRequest() ? '::ajaxBase.html.twig' : '::base.html.twig' %}

{% block main %}

<form id="proj_form" style="width:680px; margin-top:10px;" action="{% if project.id is null %}{{ path('proj_new') }}{% else %}{{ path('proj_edit', { 'id':project.id }) }}{% endif %}" method="post" {{ form_enctype(form) }}>
    <div class="clearfix">
        {{ form_label(form.name) }}
        <div class="input">{{ form_errors(form.name) }}{{ form_widget(form.name, { 'attr':{'class':'middle'} }) }}</div>
    </div>
    
    <div class="clearfix">
        {{ form_label(form.thumbnailImage) }}
        <div class="input">{{ form_errors(form.thumbnailImage) }}{{ form_widget(form.thumbnailImage) }}</div>
    </div>
    
    {{ form_rest(form) }}
    
    <div class="actions"><button class="btn btn-primary" type="submit">提交</button></div>
</form>

{% endblock %}