                    <tr>
                        <td><input type="checkbox" /></td>
                        <td><a href="#">xxx</a></td>
                        <td>...</td>
                        <td>
                            <!-- Icons -->
                             <a rel="dialog" href="#" title="Edit"><img src="resources/images/icons/pencil.png" alt="编辑" /></a>
                             <a rel="confirm" href="#" title="Delete"><img src="resources/images/icons/cross.png" alt="删除" /></a> 
                             <!--<a href="#" title="Edit Meta"><img src="resources/images/icons/hammer_screwdriver.png" alt="Edit Meta" /></a>-->
