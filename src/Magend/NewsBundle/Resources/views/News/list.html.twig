{% extends '::base.html.twig' %}

{% block contentTitle %}讯息列表{% endblock %}

{% block main %}
    <div class="content-box"><!-- Start Content Box -->
        <div class="content-box-header">
            <h3>讯息列表</h3>
            <div style="padding-top: 6px">
                <a class="btn btn-info" rel="dialog" href="{{ path('news_new') }}">新建</a>
            </div>
            <div class="clear"></div>
        </div> <!-- End .content-box-header -->
                
        <div class="content-box-content">
            <div class="tab-content default-tab" id="tab1"> <!-- This is the target div. id must match the href of this div's tab -->
            <table>
                <thead><tr>
                    <th style="width: 20px;"><input class="check-all" type="checkbox" /></th>
                    <th>标题</th>
                    <th>内容</th>
                    <th>操作</th>
                </tr></thead>
             
                <tfoot><tr>
                    <td colspan="6">
                        <div class="clear"></div>
                    </td>
                </tr></tfoot>
             
                <tbody>
                    {% for news in newsList %}
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td>{% if news.url is empty %}{{ news.title }}{% else %}<a href="{{ news.url }}">{{ news.title }}</a>{% endif %}</td>
                        <td style="max-width:320px;">
                        {% if news.content %}
                            {{ news.content|truncate(100) }}
                            {% if news.content|length > 100 %}<a rel="facebox" href="#newscontent_{{ news.id }}">详细</a>{% endif %}
                            <div class="hide" id="newscontent_{{ news.id }}">{{ news.content|nl2br }}</div>
                        {% endif %}
                        </td>
                        <td style="width:50px;">
                             <a rel="dialog" href="{{ path('news_edit', { 'id':news.id } ) }}" title="编辑"><img src="{{ asset('images/simpla/icons/pencil.png') }}" alt="编辑" /></a>
                             <a rel="confirm" href="{{ path('news_del', { 'id':news.id }) }}" title="删除"><img src="{{ asset('images/simpla/icons/cross.png') }}" alt="删除" /></a> 
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div><!-- End Content Box -->
                    
{% endblock %}