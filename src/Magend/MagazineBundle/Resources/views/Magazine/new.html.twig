{% extends app.request.isXmlHTTPRequest() ? '::ajaxBase.html.twig' : '::base.html.twig' %}

{% block main %}
    <form id="magazine_form" style="width:680px; margin-top:10px;" action="{% if magazineId is null %}{{ path('magazine_new') }}{% else %}{{ path('magazine_edit', { 'id':magazineId }) }}{% endif %}" method="post" {{ form_enctype(form) }}>
        {% if app.user.corp.isTrial %}<p style="margin-left:80px;color:#CC0000;">*试用帐号，只能创建一本杂志</p>{% endif %}
        <div class="clearfix">
            {{ form_label(form.name) }}
            <div class="input">{{ form_errors(form.name) }}{{ form_widget(form.name, { 'attr':{'class':'middle'} }) }}</div>
        </div>
        
        <div class="clearfix">
            {{ form_label(form.landscapeCoverImage) }}
            <div class="input">{{ form_errors(form.landscapeCoverImage) }}{{ form_widget(form.landscapeCoverImage) }}</div>
        </div>
        
        <div class="clearfix">
            {{ form_label(form.portraitCoverImage) }}
            <div class="input">{{ form_errors(form.portraitCoverImage) }}{{ form_widget(form.portraitCoverImage) }}</div>
        </div>
        
        {{ form_rest(form) }}
        
        <div class="actions"><button class="btn primary" type="submit">提交</button></div>
    </form>
{% endblock %}