<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
   <parameters>
        <parameter key="magend.hot.doctrine.event_listener.class">Magend\HotBundle\EventListener\Doctrine\HotEventListener</parameter>
    </parameters>
    
    <services>
        <service id="form.type.assets" class="Magend\HotBundle\Form\Type\AssetsType">
            <tag name="form.type" alias="assets" />
        </service>
        
        <service id="form.type.asset" class="Magend\HotBundle\Form\Type\AssetType">
            <tag name="form.type" alias="asset" />
        </service>
        
        <service id="magend.hot.doctrine.event_listener" class="%magend.hot.doctrine.event_listener.class%">
            <argument type="service" id="service_container" />
            <tag name="doctrine.event_listener" event="preUpdate" method="preSave" />
            <tag name="doctrine.event_listener" event="preUpdate" method="preSave" />
        </service>
    </services>
    
</container>
