{% extends '::base.xml.twig' %}

{% block body %}
    <App>
        {% for magazine in magazines %}
        <Magazine>
            <Id>{{ magazine.id }}</Id>
            <Name>{{ magazine.name }}</Name>
            <Cover>{% if magazine.landscapeCover is not null %}{{ magazine.landscapeCover }}{% endif %}</Cover>
            <Url>{{ url('output_magazine', { 'id':magazine.id }) }}</Url>
        </Magazine>
        {% endfor %}
    </App>
{% endblock %}