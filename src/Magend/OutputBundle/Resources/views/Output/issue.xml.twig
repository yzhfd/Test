{% extends '::base.xml.twig' %}

{% block body %}
    {% set copyrt = '' %}
    <Issue issueid="{{ issue.id }}">
        <articles>
        {% for article in issue.articles %}
            {% if article.copyrightMagazine %}copyrt{% set copyrt = article.id %}{% else %}{{ article.id }}{% endif %}{% if not loop.last %},{% endif %}
        {% endfor %}
        </articles>
    </Issue>
{% endblock %}